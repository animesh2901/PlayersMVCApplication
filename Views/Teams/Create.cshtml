@model PlayersMVCApplication.Models.Team


<h4>Team</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeamId" class="control-label"></label>
                <input asp-for="TeamId" id="jsTeamID" class="form-control" disabled />
                <span asp-validation-for="TeamId" class="text-danger"></span>
                <br />
                <input type="button" value="Generate Random Number" OnClick="getRandomNumber()" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <label asp-for="TeamName" class="control-label"></label>
                <input asp-for="TeamName" id="jsTeamName" class="form-control" />
                <span asp-validation-for="TeamName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="button" OnClick="createNewTeam()" value="Create New Team" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

        <script src="~/js/BusinessLogics.js" type="text/javascript"></script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    } 
}

