@model PlayersMVCApplication.Models.AddPlayerViewModel

@{
}

<h1> Add Player</h1>

<form method="post" action="Player" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Team</label>
        <input type="text" class="form-control" asp-for="Team">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Jersey Number</label>
        <input type="number" class="form-control" asp-for="JersyNumber">
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
