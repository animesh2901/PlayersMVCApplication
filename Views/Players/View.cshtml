@model PlayersMVCApplication.Models.Player.Player

@{
}

<h1> Edit / Delete Player</h1>

<form method="post" action="View" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Id</label>
        <input type="number" class="form-control" id="txtID" asp-for="Id" readonly>
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" id="txtName" asp-for="Name">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Team</label>
        <input type="text" class="form-control" id="txtTeam" asp-for="Team">
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Jersey Number</label>
        <input type="number" class="form-control" id="txtJerseyNumber" asp-for="JersyNumber">
    </div>

    <button type="submit" class="btn btn-primary" asp-action="Update">Update</button>
    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Players">Delete</button>
</form>